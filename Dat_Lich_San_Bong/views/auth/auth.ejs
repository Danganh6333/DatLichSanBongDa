<div class="container">
    <input type="checkbox" id="check">
    <div class="login form">
        <header>Đăng nhập</header>
        <form action="/auth/signin" method="POST">
            <input type="text" name="email" placeholder="Nhập Email Của Bạn">
            <input type="password" name="matKhau" placeholder="Nhập Mật Khẩu Của Bạn">
            <input type="submit" class="button" value="Đăng Nhập">
        </form>
        <div class="signup">
            <span class="signup">Không có tài khoản?
                <label for="check">Đăng Ký</label>
            </span>
        </div>
    </div>
    <div class="registration form">
        <header>Đăng ký</header>
        <form action="/auth/signup" method="post" onsubmit="validatePassword()">
            <input type="text" name="hoTen" placeholder="Nhập Họ Tên Của Bạn" required>
            <input type="email" name="email" placeholder="Nhập Email Của Bạn" required>
            <input type="text" name="phoneNumber" placeholder="Nhập Số Điện Thoại" required>
            <input type="password" name="matKhau" placeholder="Tạo Mật Khẩu Mới"  required>
            <input type="submit" class="button" value="Đăng Ký">
        </form>
        <div class="signup">
            <span class="signup">Đã có tài khoản?
                <label for="check">Đăng Nhập</label>
            </span>
        </div>
    </div>
</div>
<script type="text/javascript">
     function validatePassword() {
        const password = document.getElementById("matKhau").value;
        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{6,}$/;

        if (!passwordRegex.test(password)) {
            alert("Mật khẩu phải có ít nhất 6 ký tự, bao gồm ít nhất một chữ hoa, một chữ thường và một chữ số.");
            return false; 
        }
        return true;
    }
</script>